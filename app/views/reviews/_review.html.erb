<!-- this is for the book show page, lists all the reviews -->

<div class="reviews">
  <div class="star-rating" data-score= <%= review.rating %> ></div>
  <% if review.user_id? %>
    <p><em id="review_user_name"><%= review.user.name %></em> posted a review <%= time_ago_in_words(review.created_at) %> ago:</p>
  <% else %>
    <p><em>Anonymous</em> posted a review <%= time_ago_in_words(review.created_at) %> ago:</p>
    <% end %>
  <p id="review_comment"><%= review.comment %></p>
</div>